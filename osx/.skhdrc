# Reload yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Application Shortcuts
ctrl + shift - n : open ~
ctrl - return : open -n /Applications/Tabby.app
ctrl + shift - return : open -n /Applications/Google\ Chrome.app

# Toggle between bsp and stack mode
# alt + shift - space : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')"

# toggle window fullscreen
# alt - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
# shift + alt - f : chunkc tiling::window --toggle native-fullscreenÂ¡

# equalize size of windows
# shift + alt - 0 : chunkc tiling::desktop --equalize

# Desktop focus
# alt + ctrl - left : yabai -m space --focus prev
# alt + ctrl - right : yabai -m space --focus next
ctrl - left : yabai -m space --focus prev
ctrl - right : yabai -m space --focus next
# alt - z : yabai -m space --focus recent
ctrl - a : yabai -m space --focus 1
ctrl - s : yabai -m space --focus 2
ctrl - d : yabai -m space --focus 3
ctrl - z : yabai -m space --focus 4
ctrl - x : yabai -m space --focus 5

# Move windows to certain spaces
ctrl + shift - a : yabai -m window --space  1; yabai -m space --focus 1
ctrl + shift - s : yabai -m window --space  2; yabai -m space --focus 2
ctrl + shift - d : yabai -m window --space  3; yabai -m space --focus 3
ctrl + shift - z : yabai -m window --space  4; yabai -m space --focus 4
ctrl + shift - x : yabai -m window --space  5; yabai -m space --focus 5